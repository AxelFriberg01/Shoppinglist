@model IEnumerable<ProductsIndexVM>

@{
    ViewData["Title"] = "Index";
}

@section scripts{
    <script src="~/js/index.js"></script>
}
<h1></h1>
<hr />

<p>
    <a asp-action="Create"><input type="button" value="Add Product" /></a>
</p>
@{
    var listLength = Model.Count();
    if (listLength > 0)
    {
        <table id="table" class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OptionalQuantityInfo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="@($"itemToRemove{item.Id}")">
                        <td>
                            <input type="checkbox" style="zoom:1.3; border:0px; padding:0px; margin:0px;" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OptionalQuantityInfo)
                        </td>
                        <td>

                            <form asp-action="Remove">
                                <input class="btn btn-danger" type="button" value="X" onclick="removeItem('@item.Id', '@($"itemToRemove{item.Id}")')" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


        @*Tack vare asp-action="Clear" kopplar knappen till metoden som tar clearar*@
        <form asp-action="Clear"><input type="submit" value="Clear List" name="ClearList" /></form>



    }
}
