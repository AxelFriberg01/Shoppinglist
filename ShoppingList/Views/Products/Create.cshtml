@model ProductsCreateVM

@{
    ViewData["Title"] = "Add Product";
}

<h1></h1>
<hr />

<div>
    <a asp-action="Index"><input type="button" value="Back to List" /></a>
    <br />
    <br />
</div>

<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
                <br />
                <br />
            </div>
            <div class="form-group">
                <label asp-for="OptionalProductInfo" class="control-label"></label>
                <input asp-for="OptionalProductInfo" class="form-control" />
                <span asp-validation-for="OptionalProductInfo" class="text-danger"></span>
                <br />
                <br />
            </div>
            <div class="form-group">
                <label asp-for="StoreSection" class="control-label"></label>
                <select asp-for="SelectedStoreSection"
                        asp-items="Model.StoreSection"></select>
                <span asp-validation-for="SelectedStoreSection"></span>
                <br />
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" name="SubmitInfo" />
                <input type="submit" value="Done" class="btn btn-primary" name="SubmitInfo" />
            </div>
        </form>
    </div>
</div>


